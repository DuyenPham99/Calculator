<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayout">

    <TextView
        android:id="@+id/txtBT"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="0"
        android:textSize="80sp"
        android:layout_alignParentRight="true"
        android:gravity="center|right"
        android:background="#D8D8D8"
        android:layout_marginBottom="8sp"
        android:paddingRight="8dp"
        />
    <Button
        android:id="@+id/btnChia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     /     "
        android:textSize="30sp"
        android:layout_below="@id/txtBT"
        android:background="#D8D8D8"
        android:layout_alignRight="@id/txtBT"
        android:layout_marginBottom="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

    />
    <Button
        android:id="@+id/btnBS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    BS    "
        android:textSize="30sp"
        android:layout_below="@id/txtBT"
        android:layout_toLeftOf="@id/btnChia"
        android:background="#D8D8D8"
        android:layout_marginBottom="8sp"
        android:layout_marginLeft="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btnC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     C     "
        android:textSize="30sp"
        android:layout_below="@id/txtBT"
        android:layout_toLeftOf="@id/btnBS"
        android:background="#D8D8D8"
        android:layout_marginBottom="8sp"
        android:layout_marginLeft="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btnCE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     CE     "
        android:textSize="30sp"
        android:layout_below="@id/txtBT"
        android:layout_toLeftOf="@id/btnC"
        android:background="#D8D8D8"
        android:layout_marginBottom="8sp"
        android:layout_marginLeft="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <Button
        android:id="@+id/btnNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="30sp"
        android:layout_below="@id/btnChia"
        android:layout_alignRight="@id/btnChia"
        android:layout_alignLeft="@id/btnChia"
        android:background="#D8D8D8"
        android:layout_marginBottom="8sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="30sp"
        android:layout_below="@id/btnChia"
        android:layout_alignRight="@id/btnBS"
        android:layout_alignLeft="@id/btnBS"
        android:background="#E6E6E6"
        android:layout_marginBottom="8sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="30sp"
        android:layout_below="@id/btnC"
        android:layout_alignRight="@id/btnC"
        android:layout_alignLeft="@id/btnC"
        android:background="#E6E6E6"
        android:layout_marginBottom="8sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="7"
        android:textSize="30sp"
        android:layout_below="@id/btnCE"
        android:layout_alignRight="@id/btnCE"
        android:layout_alignLeft="@id/btnCE"
        android:background="#E6E6E6"
        android:layout_marginBottom="8sp"
        />

    <Button
        android:id="@+id/btnCong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="30sp"
        android:layout_below="@id/btnNhan"
        android:layout_alignRight="@id/btnChia"
        android:layout_alignLeft="@id/btnChia"
        android:background="#D8D8D8"
        android:layout_marginBottom="8sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="6"
        android:textSize="30sp"
        android:layout_below="@id/btn9"
        android:layout_alignRight="@id/btnBS"
        android:layout_alignLeft="@id/btnBS"
        android:background="#E6E6E6"
        android:layout_marginBottom="8sp"
        />
    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="30sp"
        android:layout_below="@id/btn8"
        android:layout_alignRight="@id/btnC"
        android:layout_alignLeft="@id/btnC"
        android:background="#E6E6E6"
        android:layout_marginBottom="8sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="30sp"
        android:layout_below="@id/btn7"
        android:layout_alignRight="@id/btnCE"
        android:background="#E6E6E6"
        android:layout_marginBottom="8sp"
        android:layout_alignLeft="@id/btnCE"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <Button
        android:id="@+id/btnTru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="30sp"
        android:layout_below="@id/btnCong"
        android:background="#D8D8D8"
        android:layout_marginBottom="8sp"
        android:layout_alignRight="@id/btnChia"
        android:layout_alignLeft="@id/btnChia"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="30sp"
        android:layout_below="@id/btn6"
        android:layout_alignRight="@id/btnBS"
        android:layout_alignLeft="@id/btnBS"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#E6E6E6"
        android:layout_marginBottom="8sp"
        />
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="30sp"
        android:layout_below="@id/btn5"
        android:layout_alignRight="@id/btnC"
        android:layout_alignLeft="@id/btnC"
        android:background="#E6E6E6"
        android:layout_marginBottom="8sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="30sp"
        android:layout_below="@id/btn4"
        android:layout_alignRight="@id/btnCE"
        android:background="#E6E6E6"
        android:layout_marginBottom="8sp"
        android:layout_alignLeft="@id/btnCE"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <Button
        android:id="@+id/btnBang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="30sp"
        android:layout_below="@id/btnTru"
        android:background="#D8D8D8"
        android:layout_marginBottom="8sp"
        android:layout_alignRight="@id/btnChia"
        android:layout_alignLeft="@id/btnChia"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btnPhay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="30sp"
        android:layout_below="@id/btn3"
        android:layout_alignRight="@id/btnBS"
        android:layout_alignLeft="@id/btnBS"
        android:background="#D8D8D8"
        android:layout_marginBottom="8sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:layout_below="@id/btn2"
        android:layout_alignRight="@id/btnC"
        android:layout_alignLeft="@id/btnC"
        android:background="#E6E6E6"
        android:layout_marginBottom="8sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    <Button
        android:id="@+id/btnDau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+/-"
        android:textSize="30sp"
        android:layout_below="@id/btn1"
        android:layout_alignRight="@id/btnCE"
        android:background="#D8D8D8"
        android:layout_marginBottom="8sp"
        android:layout_alignLeft="@id/btnCE"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

</RelativeLayout>